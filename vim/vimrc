" start Vundle plugin manager
set nocompatible                " I WILL BE V-IMPROVED
filetype off
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

" plugins

" core
Plugin 'VundleVim/Vundle.vim'

" main utils
Plugin 'tpope/vim-endwise'
Plugin 'tpope/vim-commentary'
Plugin 'tpope/vim-surround'
Plugin 'vim-scripts/gitignore'
Plugin 'christoomey/vim-tmux-navigator'
Plugin 'airblade/vim-gitgutter'
Plugin 'mileszs/ack.vim'
Plugin 'myusuf3/numbers.vim'
Plugin 'ConradIrwin/vim-bracketed-paste'
Plugin 'garbas/vim-snipmate'
" vim-snipmate dependancies
Plugin 'honza/vim-snippets'
Plugin 'MarcWeber/vim-addon-mw-utils'
Plugin 'tomtom/tlib_vim'

" navigation
Plugin 'scrooloose/nerdtree'
Plugin 'kien/ctrlp.vim'

" syntax specific
Plugin 'vim-ruby/vim-ruby'
Plugin 'kchmck/vim-coffee-script'
Plugin 'heartsentwined/vim-emblem'
Plugin 'slim-template/vim-slim.git'

" style
Plugin 'flazz/vim-colorschemes'
Plugin 'vim-airline/vim-airline'
Plugin 'vim-airline/vim-airline-themes'
Plugin 'miyakogi/conoline.vim'

" experimental
Plugin 'ervandew/supertab'
Plugin 'jiangmiao/auto-pairs'
Plugin 'Yggdroot/indentLine'
Plugin 'mustache/vim-mustache-handlebars'
Plugin 'lervag/vimtex' "  for zathura
Plugin 'thoughtbot/vim-rspec'

call vundle#end()            " required

syntax enable
filetype plugin indent on    " required

" place general settings in config/base
source $HOME/dotfiles/vim/config/autocmds.vim
source $HOME/dotfiles/vim/config/mappings.vim
source $HOME/dotfiles/vim/config/base.vim

" place plugin specific settings in config/plugins/<NAME-OF-PLUGIN>.vim
source $HOME/dotfiles/vim/config/plugins/vim-colorschemes.vim
source $HOME/dotfiles/vim/config/plugins/nerdtree.vim
source $HOME/dotfiles/vim/config/plugins/vim-tmux-navigator.vim
source $HOME/dotfiles/vim/config/plugins/vim-airline.vim
source $HOME/dotfiles/vim/config/plugins/conoline.vim
source $HOME/dotfiles/vim/config/plugins/ctrlp.vim
source $HOME/dotfiles/vim/config/plugins/indentline.vim
source $HOME/dotfiles/vim/config/plugins/ack.vim
source $HOME/dotfiles/vim/config/plugins/vim-rspec.vim
