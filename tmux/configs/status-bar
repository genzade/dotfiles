# Color and status line like powerline
BG='colour235'
LEFTFG='black'
LEFTBG='colour246'
set-option -g status-bg $BG
set-option -g status-fg white

# Session name
set-option -g status-left-length 10
set-option -g status-left "#[fg=$LEFTFG,bg=$LEFTBG] #S #[fg=$LEFTBG,bg=$BG]î‚° #[fg=$BG,bg=$LEFTBG]"

CURRENTFG='colour137'
CURRENTFS='colour137'
CURRENTBG='colour235'
set-option -g window-status-format "#[fg=$CURRENTFG,bg=$CURRENTBG]  #I #[fg=$CURRENTFS]î‚±#[fg=$CURRENTFG] #W  "
ACTIVEFG='colour231'
ACTIVEFS='colour159'
ACTIVEBG='colour33'
set-option -g window-status-current-format "#[fg=$BG,bg=$ACTIVEBG]î‚° #[fg=$ACTIVEFG,bg=$ACTIVEBG]#I #[fg=$ACTIVEFS]î‚±#[fg=$ACTIVEFG] #W "
set-option -ga window-status-current-format "#[fg=$ACTIVEBG,bg=$BG]î‚°"

RIGHT_FG1='white'
RIGHT_BG1='colour239'
RIGHT_FG2='colour231'
RIGHT_BG2='colour243'
RIGHT_FG3='black'
RIGHT_FS3='colour249'
RIGHT_BG3='colour253'
# make sure 'tmux-plugins/tmux-battery' is installed
set-option -g status-right "#{battery_color_charge_fg}î‚²#{battery_color_charge_bg} #{battery_icon} #{battery_percentage} #{battery_remain}#[fg=$RIGHT_BG1]"
set-option -ga status-right "#[fg=$RIGHT_BG1]î‚²#[fg=$RIGHT_BG1,bg=$RIGHT_BG1]"
set-option -ga status-right "#[fg=$RIGHT_BG1,bg=$RIGHT_BG1]î‚²#[fg=$RIGHT_FG2,bg=$RIGHT_BG1]"

set-option -ga status-right "ðŸ•°  #(date +%%d-%%m-%%y) #(date +%%H:%%M) (#(TZ='UTC' date +%%H:%%M)) "
# set-option -ga status-right "#[fg=$RIGHT_BG3,bg=$RIGHT_BG1]î‚²#[fg=$RIGHT_FG3,bg=$RIGHT_BG3] #(whoami) "
set-option -ga status-right "#[fg=$RIGHT_BG3,bg=$RIGHT_BG1]î‚²#[fg=$RIGHT_FG3,bg=$RIGHT_BG3] #(whoami) "
set-option -ga status-right "#[fg=$RIGHT_FS3,bg=$RIGHT_BG3]ðŸ–¥ #[fg=$RIGHT_FG3,bg=$RIGHT_BG3] #h "

